
      <div class="announcement-bar   gradient" role="region"  >
        <div class="page-width announcement">
          <div class="annoncementMessageContainer">
            <p class=" announcement-bar__message   h5"> {% render 'email' %}   {{ section.settings.email }}</p>
            <p class=" announcement-bar__message h5"> {% render 'phone' %} {{ section.settings.tel }}</p>
          </div>
            <div class="annoncementAccountContainer">
              <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" class="header__icon "> <span >
                
                {%- liquid
                  if customer
                    echo 'customer.account_fallback' | t
                  else
                    echo 'customer.log_in' | t
                  endif
                -%}
                {% render 'icon-account' %}
              </span></a>
  
              <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link focus-inset tets" id="cart-icon-bubble">
                {%- liquid
                  if cart == empty
                    render 'icon-cart-empty'
                  else
                    render 'icon-cart'
                  endif
                -%}
                <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
                {%- if cart != empty -%}
                  <div class="cart-count-bubble">
                    {%- if cart.item_count < 100 -%}
                      <span aria-hidden="true">{{ cart.item_count }}</span>
                    {%- endif -%}
                    <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
                  </div>
                {%- endif -%}
              </a>
            </div>
        </div>
        
      </div>
 
{% schema %}
{
  "name": "Annoucement",
  "tag": "div",
  "class": "annoucement-bar",
  "settings": [
  {
    "type": "text",
    "id": "email",
    "default": "figma@gmail.com",
    "label": "annoucement-email"
  },
  {
    "type": "text",
    "id": "tel",
    "default": "0617876734",
    "label": "annoucement-tel"
  }
  ]
}
{% endschema %}
