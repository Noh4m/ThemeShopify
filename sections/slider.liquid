 <!-- Link Swiper's CSS -->
 <link
 rel="stylesheet"
 href="https://unpkg.com/swiper/swiper-bundle.min.css"
/>

<div class="swiper mySwiper">
    <div class="swiper-wrapper">
        {% for block in section.blocks %}
            {% case block.type %}
                {% when 'slide' %}
                
                <div class="swiper-slide">
                    {{ block.settings.image | image_url: width: auto | image_tag }}
                    <div class="swiper-slideContent">
                        <h3 class="swiper-slideContentSubTitle">Best Furniture For Your Castle....</h3>
                        <h1 class="swiper-slideContentTitle">New Furniture Collection
                            Trends in 2020</h1>
                        <p class="swiper-slideContentText">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Magna in est adipiscing
                            in phasellus non in justo.</p>
                    </div>
                </div>
                    
            {% endcase %}
        {% endfor %}
   
    </div>
    <div class="swiper-pagination"></div>
  </div>

  <!-- Swiper JS -->
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

  <script>
    var swiper = new Swiper(".mySwiper", {
        loop: true,
        pagination: {
          el: ".swiper-pagination",
        },
    });
  </script>


{% schema %}
{
"name": "Section name",
"tag": "section",
"settings": [],
"presets": [
{
"name": "Welcome section Test",
"category": "ADVANCED LAYOUT"
}
],
"blocks": [
    {
        "name": "Slide",
        "type": "slide",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            }
        ]
    }
]
}
{% endschema %}

